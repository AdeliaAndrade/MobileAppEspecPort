<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".ControlActivity"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="720dp"
            android:layout_weight="1"
            android:text="Conectado :D"
            android:textColor="@color/red_color"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linear_start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/imagem_inicio" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_analisando"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/logo_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/loading_connection" />

            <TextView
                android:id="@+id/btn_conecction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Analisando..."
                android:textColor="@color/red_color"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_button_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_reconnect_again"
                android:layout_width="650px"
                android:layout_height="200px"
                android:background="@drawable/button_rounded"
                android:contentDescription="Reconectar"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/connect_again" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_button_play"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="50px">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_start_request_01"
                android:layout_width="650px"
                android:layout_height="200px"
                android:background="@drawable/button_rounded"
                android:contentDescription="Realizar Análise"
                android:text="Realizar Análise"
                app:srcCompat="@drawable/start_icon" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>