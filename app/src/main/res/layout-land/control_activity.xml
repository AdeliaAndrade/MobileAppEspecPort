<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:backgroundTint="@color/background_color"
    tools:context=".ControlActivity"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <ImageButton
            android:id="@+id/btn_reconnect"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_rounded"
            android:src="@drawable/connect_again"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/btn_start_request_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Realizar AnÃ¡lise"
            android:src="@drawable/iniciar_analise" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="top|right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/imagem_inicio" />
    </LinearLayout>

</LinearLayout>